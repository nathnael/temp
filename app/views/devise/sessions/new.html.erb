<div class="login-form">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-4">
            <h2 class="heading-secondary ma-bt-lg">Log in to IRAPS</h2>
        </div>
    </div>            
    <div class="wrapper wrapper-content">
        <div class="ibox-content">                              
            <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=> {class:'form form--login'}) do |f| %>
                <%= devise_error_messages! %>
                <div class="form__group">
                    <%= f.label :email_address, class: 'form__label' %><br/>
                    <%= f.email_field :email, autofocus: true, class: "form__input", type: "email"%>
                </div>
        
                <div class="form__group">
                    <%= f.label :password, class: 'form__label' %><br/>
                    <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
                </div>
        
                <% if devise_mapping.rememberable? -%>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: 'form__label', style: 'display: inline' %>
                </div>
                <% end -%>
                <br />
                <div class="form__group">
                    <%= f.submit "Log in", class: "btn btn--green" %>
                </div>
                <br />
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>