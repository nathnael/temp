<div class="login-form">
  <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-sm-4">
          <h2 class="heading-secondary ma-bt-lg">Forgot your password?</h2>
      </div>
  </div>            
  <div class="ibox float-e-margins">                
      <div class="ibox-content">                
          <div class="wrapper wrapper-content">
              <div class="ibox-content">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=> {class:'form form--login'}) do |f| %>
                      <div class="field">
                        <%= f.label :email, class: 'form__label' %><br />
                        <%= f.email_field :email, autofocus: true, class: "form__input" %>
                      </div>
                      <br />
                      <div class="form__group">
                        <%= f.submit "Send me reset password instructions", class: "btn btn--green" %>
                      </div>
                      <br />
                  <% end %>
  
                  <%= render "devise/shared/links" %>
              </div>
          </div>
      </div>
  </div>
</div>